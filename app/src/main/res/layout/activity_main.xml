<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name Input -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:textSize="20sp"
        android:padding="10dp"/>

    <!-- Gender RadioButton -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Gender"
        android:textSize="20sp"
        android:padding="10dp"/>

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

    <!-- Courses CheckBox -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Courses"
        android:textSize="20sp"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/courseWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Development course" />

    <CheckBox
        android:id="@+id/courseFlutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flutter for beginners" />

    <CheckBox
        android:id="@+id/coursePython"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python for beginners" />

    <!-- Rating Bar for Feedback -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate the registration process:"
        android:textSize="20sp"
        android:padding="10dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5" />

    <!-- SeekBar for Age -->
    <TextView
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Age: 18"
        android:textSize="20sp"
        android:padding="10dp"/>

    <SeekBar
        android:id="@+id/seekBarAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="18" />

    <!-- Notification Switch -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Notifications"
        android:textSize="20sp"
        android:padding="10dp"/>

    <Switch
        android:id="@+id/switchNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="15sp"
        android:padding="10dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>



